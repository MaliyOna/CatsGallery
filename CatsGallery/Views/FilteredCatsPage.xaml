<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CatsGallery.ViewModels"
             xmlns:models="clr-namespace:CatsGallery.Models"
             xmlns:behaviors="clr-namespace:CatsGallery.Behaviors"
             x:Class="CatsGallery.Views.FilteredCatsPage"
             x:DataType="vm:CatsViewModel"
             Title="Поиск котика">

    <ScrollView>
        <VerticalStackLayout>
            <SearchBar Placeholder="Поиск котов по имени...">
                <SearchBar.Behaviors>
                    <behaviors:SearchBarTextChangedBehavior Command="{Binding FilterCatsCommand}" />
                </SearchBar.Behaviors>
            </SearchBar>

            <CollectionView 
                ItemsSource="{Binding FilteredCats}"
                ItemTemplate="{StaticResource CatItemTemplate}">
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
