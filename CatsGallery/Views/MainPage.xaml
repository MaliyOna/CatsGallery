<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatsGallery.Views.MainPage">

    <Grid>
        <Image 
            Source="background.jpg"
            Aspect="AspectFill"/>

        <VerticalStackLayout
            Spacing="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center">
            
            <Button Text="Страница с котиками" 
                    Clicked="ToCatsClicked"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center"/>
            
            <Button Text="Страница поиска котика" 
                    Clicked="ToFindCatClicked"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center"/>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>
